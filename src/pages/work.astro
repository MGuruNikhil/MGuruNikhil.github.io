---
import Layout from '../layouts/Layout.astro'
import WorkCard from '../components/WorkCard.astro'

const experiences = [
  {
    role: 'Full Stack Developer Intern',
    company: 'Aegion Dynamic Solutions',
    location: 'Visakhapatnam, Andhra Pradesh',
    start: 'Jan 2025',
    end: 'Jun 2025',
    bullets: [
      'Developed web apps using Nimbus framework with Next.js, GraphQL, Go, and more.',
      'Refactored repos (~26.5K LOC) for Next.js-Nimbus compatibility, reducing onboarding time by 70%.',
    ],
    tech: 'Next.js, GraphQL, Typescript, Linux, Docker, Swagger, Codegen, Graphjin',
  },
]

---

<Layout>
  <section class="container mx-auto py-12 px-4">
    <h2 class="text-3xl font-semibold">Work Experience</h2>
    <div class="mt-6 space-y-6">
      {experiences.map(exp => <WorkCard {...exp} />)}
    </div>
    <section class="mt-8">
      <p class="text-sm muted-theme">Education, achievements, and certifications are listed on my <a href="/resume" class="text-[var(--blue)]">Resume</a> page.</p>
    </section>
  </section>
</Layout>
