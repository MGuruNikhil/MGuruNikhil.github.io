---
import Layout from '../layouts/Layout.astro'
import WorkCard from '../components/WorkCard.astro'

const experiences = [
  {
    role: 'Full Stack Developer Intern',
    company: 'Aegion Dynamic Solutions',
    location: 'Visakhapatnam, Andhra Pradesh',
    start: 'Jan 2025',
    end: 'Jun 2025',
    bullets: [
      'Developed web apps using Nimbus framework with Next.js, GraphQL, Go, and more.',
      'Refactored repos (~26.5K LOC) for Next.js-Nimbus compatibility, reducing onboarding time by 70%.',
    ],
    tech: 'Next.js, GraphQL, Typescript, Linux, Docker, Swagger, Codegen, Graphjin',
  },
]

---

<Layout>
  <section class="container mx-auto py-12 px-4">
    <h2 class="text-3xl font-semibold">Work Experience</h2>
    <div class="mt-6 space-y-6">
      {experiences.map(exp => <WorkCard {...exp} />)}
    </div>

    <section class="mt-8">
      <h3 class="text-2xl font-semibold">Education</h3>
      <div class="mt-3 border card-border card-bg rounded p-4">
        <p class="font-semibold">Vignan's Institute of Information Technology</p>
  <p class="text-sm muted-theme">Bachelor of Computer Science and Engineering · Oct 2022 – Apr 2026</p>
      </div>
    </section>

    <section class="mt-8">
      <h3 class="text-2xl font-semibold">Achievements</h3>
  <ul class="mt-3 list-disc list-inside text-sm muted-theme">
        <li>3* (Max Rating: 1635) on CodeChef, 230+ problems solved, 50+ contests.</li>
        <li>200+ problems solved on LeetCode (Arrays, DP, Graphs, Hash Tables, Priority Queues).</li>
      </ul>
    </section>

    <section class="mt-8">
      <h3 class="text-2xl font-semibold">Certifications</h3>
  <ul class="mt-3 list-disc list-inside text-sm muted-theme">
        <li>edX Verified Certificate for Relational Database Basics</li>
        <li>Google AI Essentials</li>
      </ul>
    </section>
  </section>
</Layout>
