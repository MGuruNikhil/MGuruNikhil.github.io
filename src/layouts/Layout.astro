---
import '../styles/global.css'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import ThemeScript from '../components/ThemeScript.astro'
---
<html lang="en" class="bg-theme fg-theme">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <!-- Theme script must run as early as possible to avoid flash -->
    <ThemeScript />
    <slot name="head"></slot>
  </head>
  <body class="antialiased min-h-screen flex flex-col bg-theme fg-theme">
    <Header />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
  
</html>
